{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "Libui/*": ["./src/libui/*"],
            "Styles/*": ["./src/styles/*"],
            "I18n": ["./src/i18n.js"],
            "Constants/*": ["./src/Constants/*"],
        },
        "jsx": "react",
        "allowJs": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "noFallthroughCasesInSwitch": true,
        "typeRoots": [
            "custom_typings"
        ]
    },
    "include": ["src/custom.d.ts"]
  }
